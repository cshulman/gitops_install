apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ gitops_application_name }}
  namespace: openshift-gitops
spec:
  destination:
    namespace: default
    server: https://kubernetes.default.svc
  project: default
  source:
    directory:
      jsonnet: {}
      recurse: true
    path: ./argofiles/
    repoURL: {{ repo_url }}
    targetRevision: HEAD
  syncPolicy:
    syncOptions:
    - CreateNamespace=true
